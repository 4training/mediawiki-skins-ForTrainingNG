    & a {
      @apply ml-4;
    }

    & h1 a {
      @apply ml-0;
    }
  }
  article > div {
    @apply relative;
    z-index: 1;
  }

  @media (min-width: 640px) {
    .nav {
      box-shadow: 1em 0 0 0 #fff,
        1.25em 0 0 0 rgba(254, 242, 242, var(--tw-border-opacity));
    }
  }
</style>
