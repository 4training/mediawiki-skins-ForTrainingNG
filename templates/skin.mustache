<style type="text/tailwindcss">
	body {
		@apply grid sm:gap-x-5;
    grid-template-areas:
      "head head"
      "aside main";
    grid-template-columns: minmax(0, max-content) 1fr;
  }
  .topline {
    z-index: 2;
    grid-area: head;
  }
  .aside {
    grid-area: aside;
  }
  main {
    grid-area: main;
  }
  .nav-closed {
    contain: size layout;
    z-index: 2;
  }
